{
    "comments": {
        // symbol used for single line comment. Remove this entry if your language does not support line comments
        "lineComment": ";"
    },
    // symbols that are auto closed when typing
    "autoClosingPairs": [
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    // symbols that that can be used to surround a selection
    "surroundingPairs": [
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    // directives that start and end folding sections
    "folding": {
        "markers": {
            "start": "^\\s*\\.(enum|macro|mac|proc|scope|struct|union|repeat|ENUM|MACRO|MAC|PROC|SCOPE|STRUCT|UNION|REPEAT)",
            "end": "^\\s*\\.(endenum|endmacro|endmac|endproc|endscope|endstruct|endunion|ENDENUM|ENDMACRO|ENDMAC|ENDPROC|ENDSCOPE|ENDSTRUCT|ENDUNION)"
        }
    }
}