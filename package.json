{
    "name": "code-ca65",
    "icon": "images/icon.png",
    "displayName": "ca65 Macro Assembler Language Support (6502/65816)",
    "description": "Provides language support for the ca65 macro assembler.",
    "version": "1.1.0",
    "publisher": "tlgkccampbell",
    "repository": {
        "type": "git",
        "url": "https://github.com/tlgkccampbell/code-ca65"
    },
    "engines": {
		"vscode": "^1.32.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:ca65"
    ],
	"main": "./out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "ca65",
                "aliases": [
                    "6502/65816 Assembly",
                    "ca65"
                ],
                "extensions": [
                    ".asm",
                    ".s",
                    ".S",
                    ".inc"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "ca65",
                "scopeName": "source.ca65",
                "path": "./syntaxes/ca65.tmLanguage.json"
            }
        ],
        "problemMatchers": [
            {
                "name": "ca65",
                "owner": "ca65",
                "fileLocation": "absolute",
                "pattern": [
                    {
                        "regexp": "^(.+)\\((\\d+)\\):\\s+(Error|Warning|Note):\\s+(.+)$",
                        "file": 1,
                        "line": 2,
                        "severity": 3,
                        "message": 4
                    }
                ]
            },
            {
                "name": "ld65-unresolved",
                "owner": "ca65",
                "fileLocation": "absolute",
                "pattern": [
                    {
                        "regexp": "(Unresolved external `(.*)') referenced in:\\s*$",
                        "message": 1,
                        "code": 2
                    },
                    {
                        "regexp": "\\s*(.*)\\((\\d+)\\)",
                        "file": 1,
                        "line": 2,
                        "loop": true
                    }
                ]
            },
            {
                "name": "ld65-config",
                "owner": "ca65",
                "fileLocation": "absolute",
                "pattern": [
                    {
                        "regexp": "^ld65: (.*?): ((.*\\.cfg)\\((\\d+)\\): )?(.*)$",
                        "severity": 1,
                        "file": 3,
                        "line": 4,
                        "message": 5
                    }
                ]
            },
            {
                "name": "ld65",
                "owner": "ca65",
                "fileLocation": "absolute",
                "pattern": [
                    {
                        "regexp": "^ld65: (.*?): ((.*)\\((\\d+)\\): )?(.*)$",
                        "severity": 1,
                        "file": 3,
                        "line": 4,
                        "message": 5
                    }
                ]
            }
        ],
        "taskDefinitions": [
            {
                "type": "ca65",
                "required": [],
                "properties": {
                    "config": {
                        "type": "string",
                        "description": "The path to the ld65 configuration file which defines the target system's memory map."
                    }
                }
            }
        ]
    },
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"tslint": "^5.12.1",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	}    
}
