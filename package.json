{
    "name": "code-ca65",
    "icon": "images/icon.png",
    "displayName": "ca65 Macro Assembler Language Support (6502/65816)",
    "description": "Provides language support for the ca65 macro assembler.",
    "version": "1.0.2",
    "publisher": "tlgkccampbell",
    "repository": {
        "type": "git",
        "url": "https://github.com/tlgkccampbell/code-ca65"
    },
    "engines": {
        "vscode": "^1.25.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [{
            "id": "ca65",
            "aliases": ["6502/65816 Assembly", "ca65"],
            "extensions": [".asm", ".s", ".S"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "ca65",
            "scopeName": "source.ca65",
            "path": "./syntaxes/ca65.tmLanguage.json"
        }],
        "problemMatchers": [{
            "name": "ca65",
            "owner": "ca65",
            "fileLocation": "relative",
            "pattern": [{
                "regexp": "^(.+)\\((\\d+)\\):\\s+(Error|Warning|Note):\\s+(.+)$",
                "file": 1,
                "line": 2,
                "severity": 3,
                "message": 4
            }]
        }, {
            "name": "ld65-unresolved",
            "owner": "ca65",
            "fileLocation": "relative",
            "pattern": [{
                "regexp": "(Unresolved external `(.*)') referenced in:\\s*$",
                "message": 1,
                "code": 2
            }, {
                "regexp": "\\s*(.*)\\((\\d+)\\)",
                "file": 1,
                "line": 2,
                "loop": true
            }]
        }, {
            "name": "ld65-config",
            "owner": "ca65",
            "fileLocation": "absolute",
            "pattern": [{
                "regexp": "^ld65: (.*?): ((.*\\.cfg)\\((\\d+)\\): )?(.*)$",
                "severity": 1,
                "file": 3,
                "line": 4,
                "message": 5                
            }]
        }, {
            "name": "ld65",
            "owner": "ca65",
            "fileLocation": "relative",
            "pattern": [{
                "regexp": "^ld65: (.*?): ((.*)\\((\\d+)\\): )?(.*)$",
                "severity": 1,
                "file": 3,
                "line": 4,
                "message": 5                
            }]
        }]
    }
}